package model;

import java.util.ArrayList;
/*******************************************************************/
/**  Class TrafficSignValidityArea                                **/
/**                                                               **/ 
/**  this class is used for relation traffic signs to road tiles  **/ 
/*******************************************************************/


public class TrafficSignValidityArea {
	ArrayList <RoadTileModel> roadTiles = null;
	ArrayList <TrafficsignModel> trafficSigns=null;
	
	//GETTERS AND SETTERS
	public ArrayList<RoadTileModel> getRoadTiles() {
		return roadTiles;
	}

	public ArrayList<TrafficsignModel> getTrafficSigns() {
		return trafficSigns;
	}

	public void setRoadTiles(ArrayList<RoadTileModel> roadTiles) {
		this.roadTiles = roadTiles;
	}

	public void setTrafficSign(TrafficsignModel trafficSign) {
		this.trafficSigns = trafficSigns;
	}
	//CONSTRUCTOR
	public TrafficSignValidityArea(ArrayList<RoadTileModel> roadTiles,
			ArrayList<TrafficsignModel> trafficSigns) {
		super();
		this.roadTiles = roadTiles;
		this.trafficSigns = trafficSigns;
	}
}
